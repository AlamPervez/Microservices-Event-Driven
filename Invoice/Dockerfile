FROM mcr.microsoft.com/dotnet/core/aspnet:2.2-stretch-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:2.2-stretch AS build
WORKDIR /src
COPY ["Invoice/Invoice.csproj", "Invoice/"]
RUN dotnet restore "Invoice/Invoice.csproj"
COPY . .
WORKDIR "/src/Invoice"
RUN dotnet build "Invoice.csproj" -c Release -o /app

FROM build AS publish
RUN dotnet publish "Invoice.csproj" -c Release -o /app

FROM base AS final
WORKDIR /app
COPY --from=publish /app .
ENTRYPOINT ["dotnet", "Invoice.dll"]